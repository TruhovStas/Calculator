<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout Padding="10">
        <!-- Text input field -->
        <Entry x:Name="InputEntry" Placeholder="Введите текст" />

        <!-- Button -->
        <Button Text="Выполнить" Clicked="OnExecuteButtonClicked" />

        <!-- Grid to hold the two ListViews -->
        <Grid ColumnDefinitions="*,*">

            <!-- Left ListView -->
            <ListView x:Name="LeftListBox" Grid.Column="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Right ListView -->
            <ListView x:Name="RightListBox" Grid.Column="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </StackLayout>
</ContentPage>